<form method="post" action="{{ path('borrar_post', {'id': post.id}) }}" onsubmit="return confirm('¿Estás seguro de que quieres borrar el post?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
	<button class="btn btn-danger mt-3">
		<i class="bi bi-trash"></i>
	</button>
</form>
